{
  "name": "@mherod/get-cookie",
  "version": "2.0.0-beta.3",
  "description": "Node.js module for querying a local user's Chrome cookie",
  "source": "src/index.js",
  "bin": "dist/cli.js",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "git clean -fXd",
    "build": "parcel build",
    "test": "jest",
    "postbuild": "npm run check && npm run install:global",
    "prepublish": "npm run build",
    "install:global": "npm install --force --global .",
    "postinstall:global": "find $NVM_BIN -exec chmod +x {} \\; || true",
    "prettier": "prettier --write 'src/{**/*,*}.{js,json,ts}'",
    "check": "tsc --noEmit"
  },
  "targets": {
    "main": {
      "source": "src/index.js",
      "distDir": "dist",
      "engines": {
        "node": "16"
      }
    },
    "cli": {
      "source": "src/cli.js",
      "distDir": "dist",
      "engines": {
        "node": "16"
      }
    }
  },
  "@parcel/transformer-js": {
    "inlineFS": false,
    "inlineEnvironment": false
  },
  "engines": {
    "node": "16"
  },
  "keywords": [],
  "author": "Matthew Herod",
  "license": "ISC",
  "dependencies": {
    "colorette": "^2.0.19",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "sqlite3": "^5.1.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.8.2",
    "jest": "^29.0.3",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
